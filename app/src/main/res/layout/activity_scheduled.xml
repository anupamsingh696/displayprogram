<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduledActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- HEADER -->
        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@drawable/border_grey_white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvFromTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From Time"
                    android:onClick="onClick1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="10sp"
                    android:textSize="27sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@drawable/border_grey_white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvToTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To Time"
                    android:gravity="center"
                    android:onClick="onClick1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="10sp"
                    android:textSize="27sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:background="@drawable/border_grey_white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:gravity="center"
                    android:onClick="onClick1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="10sp"
                    android:textSize="27sp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- BODY -->

        <LinearLayout
            android:id="@+id/llBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llHeader"
            android:background="@drawable/border_light_grey_white"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="FNCE2000 , Introduction to Finance Principle"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvClassId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Class 3"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="6 April 2022"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="1:00 PM - 4:00 PM"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvTeacherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Ronnie"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Remarks"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>